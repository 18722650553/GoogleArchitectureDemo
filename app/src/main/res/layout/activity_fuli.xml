<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="google.architecture.ActivityFuli">

    <data>

        <import type="android.view.View"/>

        <variable
            name="fuliViewModel"
            type="google.architecture.coremodel.viewmodel.FuliViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_light_background"
        android:orientation="vertical">

        <!--<include-->
            <!--layout="@layout/fuli_item"-->
            <!--app:uiObservableData="@{fuliViewModel.uiObservableData}"/>-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/fuli_list_wrapper">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/fuli_list"
                    android:contentDescription="fuli list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="LinearLayoutManager" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>

</layout>
